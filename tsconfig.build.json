{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib/typescript",
    "rootDir": "src",
    "removeComments": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "lib",
    "example",
    "**/__tests__/**/*",
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*"
  ]
}